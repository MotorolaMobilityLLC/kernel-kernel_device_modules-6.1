#
# motorola touchscreen driver configuration
#
config TOUCHSCREEN_GOODIX_BRL_SPI
	bool "Support SPI bus connection"
	help
		Say Y here if the touchscreen is connected via SPI bus.

config INPUT_TOUCHSCREEN_MMI
	bool "Support moto touchscreen mmi framework"
	help
		Say Y here if the touchscreen_mmi be used.

config GTP_USE_MMI_INFO
	bool "Use mmi info for get panel name"
	help
		Say Y here if use mmi_info.

config GTP_MULTI_CONFIG
	bool "Use different config files"
	help
		Say Y here if use use different config names based on different modules.

config TARGET_BUILD_FACTORY
	bool "Identify if it's a factory build"
	help
		Say Y here if it's a factory build for touch driver.

config TOUCHCLASS_MMI_MTK_CHARGER
	bool "Support mtk charger detection"
	help
		Say Y here if use mtk charger detection for touchscreen mmi.

config GTP_LAST_TIME
	bool "Support get the timestamp of last touch event"
	help
		Say Y here if need to get the timestamp of last touch event.

config BOARD_USES_DOUBLE_TAP_CTRL
	bool "Support touch wake gesture feature"
	help
		Say Y here if support touch wake gesture feature.

config ENABLE_GTP_PALM_CANCEL
	bool "Support touch palm cancel feature"
	help
		Say Y here if support touch palm cancel feature.

config INPUT_GOODIX_MMI_ENABLE_PALM
	bool "Support touch palm sensor"
	help
		Say Y here if support touch palm sensor for assist p-sensor detection.

config MTK_PROJECT_NAME
	string "set project name"
	help
		This config is set as project name for touch to select configuration.

config MOTO_BUILD_VARIANT
	string "set build variant"
	help
		This config is set as build variant for touch.

config GTP_GHOST_LOG_CAPTURE
	bool "Support ghost touch log capture feature"
	help
		Say Y here if support ghost touch log capture feature.

config GTP_FOD
	bool "Support fod feature"
	help
		Say Y here if support fod feature.

config GTP_POCKET_MODE
	bool "Support pocket mode feature"
	help
		Say Y here if support pockey mode feature.

config GTP_CS_DELAY
	bool "Set SPI CS setuptime"
	help
		Say Y here if need to adjust CS setuptime.

config GOODIX_ESD_ENABLE
   bool "Support TP esd check"
   help
		Say Y here if need to support TP esd check feature.
